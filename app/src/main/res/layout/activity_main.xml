<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <ImageView
        android:id="@+id/coffee_image_view"
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/coffee"
         />

    <TextView
        android:id="@+id/hdr_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:text="THE BEST COFFEE MAKERS !!"
        android:textColor="#C62828"
        android:textSize="48sp"
        android:textStyle="italic"
        android:fontFamily="cursive"
        />

    <TextView
        android:layout_below="@id/coffee_image_view"
        android:id="@+id/qnt_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="16dp"
        android:text="QUANTITY :"
        android:textColor="#EE6002"
        android:textSize="30sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/dec_button_view"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/qnt_text_view"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="12dp"
        android:background="#EF9A9A"
        android:onClick="decrement"
        android:text="-"
        android:textColor="#5C00D2"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/quantity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/qnt_text_view"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="12dp"
        android:layout_toRightOf="@id/dec_button_view"
        android:text="0"
        android:textColor="#C62828"
        android:textSize="28sp" />

    <Button
        android:id="@+id/inc_button_view"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/qnt_text_view"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/quantity_text_view"
        android:background="#EF9A9A"
        android:onClick="increment"
        android:text="+"
        android:textColor="#5C00D2"
        android:textSize="28sp" />



    <TextView
        android:id="@+id/prc_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dec_button_view"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:text="ORDER SUMMARY : "
        android:textColor="#EE6002"
        android:textStyle="bold"
        android:textSize="32sp"
        />

    <TextView
        android:id="@+id/price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/prc_text_view"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:text="0"
        android:textColor="#C62828"
        android:textSize="28sp"
        />

    <Button
        android:id="@+id/order_button_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="450dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="8dp"
        android:background="#EF9A9A"
        android:onClick="submitOrder"
        android:text="Order"
        android:textColor="#5C00D2"
        android:textStyle="bold" />
</RelativeLayout>